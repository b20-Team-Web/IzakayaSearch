                    <div class="ranking_box_image">
                        <%= image_tag("/assets/item_image/2.jpg") %>
                    </div>
                    <div class="ranking_item_info">
                        <div class="ranking_item_top">
                            <div>
                                <%= image_tag("/assets/icons/1.svg") %>
                            </div>
                            <div>
                                <a href="#">北の味紀行と地酒　北海道　八王子駅前店</a>
                            </div>
                        </div>
                        <div class="ranking_item_middle">
                            <div class="item_middle_dis">
                                <div class="item_dis_info">
                                    <div>
                                        <span class="material-icons">
                                            directions_walk
                                        </span>
                                    </div>
                                    <div>
                                        八王子駅徒歩〇〇分
                                    </div>
                                </div>
                                <div class="item_ave_info">
                                    <div>
                                        <span class="material-icons orange">
                                            brightness_7
                                        </span>
                                    </div>
                                    <div>
                                        1000円〜
                                    </div>
                                    <div>
                                        <span class="material-icons dimgray">
                                            brightness_2
                                        </span>
                                    </div>
                                    <div>
                                        3000円〜
                                    </div>
                                </div>
                            </div>
                            <div class="item_price_info">
                                <div>888円</div>
                            </div>
                        </div>
                        <div class="item_ilc_tag">
                            <span class="badge badge-info">お酒タグ１</span>
                            <span class="badge badge-info">お酒タグ２</span>
                            <span class="badge badge-info">お酒タグ3</span>
