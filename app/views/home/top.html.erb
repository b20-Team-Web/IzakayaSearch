<div class="first_area_pc">
    <div class="content_area">
        <div class="content_pankuzu">
            <div>パンくずリスト</div>
        </div>
        <div class="content_main_items">
            <div class="content_search">
                <div class="search_midashi">
                    <div class="search_midashi_icon">
                        <span class="material-icons">
                            done
                        </span>
                    </div>
                    <div>並び順</div>
                </div>
                <div class="search_sort">
                    <form action="soushinsaki" method="post">
                        <div>
                            <input type="radio" name="sort" value="1" checked="checked">平均価格が安い順
                        </div>
                        <div>
                            <input type="radio" name="sort" value="2">駐車場が多い順
                        </div>
                        <div>
                            <input type="radio" name="sort" value="3">ビールが安い順
                        </div>
                        <div>
                            <input type="submit" value="並び替える">
                        </div>
                    </form>
                </div>
                <div class="search_midashi">
                    <div class="search_midashi_icon">
                        <span class="material-icons">
                            done
                        </span>
                    </div>
                    <div>ビール名で検索</div>
                </div>
                <div class="search_name">
                    <div class="search_name_eg">
