.footer {
    height: 200px;
    margin-top: 4vw;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: rgba(0, 0, 0, 0.25);
    width: 100%;
}

.footerBox {
    width: 80%;
    display: inline-flex;
    justify-content: space-around;
}

.button_to {
    display: flex;
}

.m_fixed {
    position: fixed;
    top: 16px;
}

.p-topAreaFirstView {
    display: flex;
    flex-direction: column;
    background-image: url(<%= asset_path("top_image_pc.jpg") %>);
    background-size: cover;
    height: 500px;
    padding-left: 270px;
    font-weight: bold;
    font-size: 28px;
}

.p-topAreaFirstView__title {
    line-height: 1.8em;
    letter-spacing: .1em;
    margin-top: 100px;
    color: #fff;
    text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.45), -1px 1px 0 rgba(0, 0, 0, 0.45), 1px -1px 0 rgba(0, 0, 0, 0.45), -1px -1px 0 rgba(0, 0, 0, 0.45);
}

.p-topAreaFirstView__titleRegion {
    font-size: 64px;
    margin-right: 6px;
}

.p-topAreaFirstView__price {
    color: #FFF500;
    font-size: 36px;
    margin-top: 16px;
    letter-spacing: .1em;
    text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.45), -1px 1px 0 rgba(0, 0, 0, 0.45), 1px -1px 0 rgba(0, 0, 0, 0.45), -1px -1px 0 rgba(0, 0, 0, 0.45);
}

.p-topAreaFirstView__priceEmphasis {
    font-size: 100px;
}

.p-topAreaFirstView__priceAccess {
    color: #fff;
    line-height: 1.9em;
    font-size: 28px;
}

.p-topArea {
    display: flex;
    width: 70%;
    margin: auto;
    padding: 16px;
}

.p-topAreaSearch {
    width: 30%;
    max-width: 230px;
}

.p-topAreaSearchTitle {
    padding: 6px 12px;
    background-color: #FFF500;
    font-size: 12px;
}

.p-topAreaSearchTitle > span {
    font-size: 18px;
    vertical-align: sub;
    margin-right: 6px;
}

.p-topAreaSearchList {
    padding: 16px;
}

.p-topAreaSearchList__item {
    font-size: 14px;
    padding: 16px;
    border: 1px solid rgba(0, 0, 0, 0.25);
    border-radius: 25px;
    width: 75%;
    margin-bottom: 16px;
    text-align: center;
}

.p-topAreaList {
    width: 70%;
    padding: 0 16px;
}

.p-sectionHeader {
    margin: 32px 0 16px;
    border-left: 7px solid #FFEE58;
    line-height: 35px;
    font-size: 18px;
    padding-left: 12px;
}

.p-sectionHeaderTop {
    margin-bottom: 16px;
    border-left: 7px solid #FFEE58;
    line-height: 35px;
    font-size: 18px;
    padding-left: 12px;
}

.p-topAreaListCardWrapper {
    max-width: 700px;
}
.p-topAreaListCard {
    display: flex;
    padding: 16px;
    border-bottom: 1px solid #B0B0B0;
    letter-spacing: .03em;
}

.p-topAreaListCard:first-child {
    border-top: 1px solid #B0B0B0;
    width: 100%;
    max-width: 650px;
}

.p-topAreaListCardImage {
    width: 190px;
    height: 190px;
}

.p-topAreaListCardImage > img {
    width: 190px;
    height: 190px;
    border-radius: 18px;
}

.p-topAreaListCardInfo {
    padding: 8px 0 8px 16px;
    width: 100%;
}

.p-topAreaListCardInfo__title {
    display: flex;
    font-weight: bold;
    align-items: center;
    margin-bottom: 12px;
}

.p-topAreaListCardInfo__titleRank {
    color: black;
    margin-right: 6px;
    font-size: 20px;
}

.p-topAreaListCardInfo__titleText {
    text-decoration: underline;
    color: blue;
    font-size: 20px;
    line-height: 1.2em;
}

.p-topAreaListCardInfoDetail {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 12px;
}

.p-topAreaListCardInfoDetail__access {
    font-weight: bold;
    font-size: 14px;
    line-height: 1.9em;
    width: 60%;
}

.p-topAreaListCardInfoDetail__accessText {
    display: flex;
    align-items: center;
}

.p-topAreaListCardInfoDetail__price {
    font-size: 38px;
    font-weight: bold;
    color: red;
    width: 40%;
}

.p-topAreaListCardInfo__tag {
    font-size: 10px;
}

.p-topAreaListCardInfo__tagItem {
    display: inline-block;
    padding: 4px;
    margin: 0 1px 8px 0;
    background-color: #AFCFFF;
    border-radius: 4px;
}

.p-topAreaListCardInfo__pr {
    color: #8D8D8D;
    font-size: 12px;
    line-height: 1.3em;
}

.p-storeDetail {
    width: 70%;
    margin: auto;
}

.p-storeDetail__title {
    font-size: 25px;
    padding: 16px 0;
}

.p-storeDetail__image {
    height: 400px;
    width: 70%;
    margin: auto auto 16px;
}

.p-storeDetail__image > img {
    width: 100%;
    height: 100%;
}

.p-storeDetailTable {
    width: 100%;
    margin-bottom: 16px;
}

.p-storeDetailTable__th {
    width: 30%;
    vertical-align: middle;
    font-size: 26px;
    font-weight: bold;
    border-left: unset;
    border-right: unset;
    background-color: #FFEE58;
}

.p-storeDetailTable__td {
    display: flex;
    font-size: 26px;
    font-weight: bold;
    border-right: unset;
}

.p-storeDetailTable__th,
.p-storeDetailTable__td {
    padding: 26px;
}

.p-storeDetailTable__text {
    width: 80%;
}

.p-storeDetailTable__price {
    width: 20%;
    text-align: right;
    color: red;
}

.p-storeDetailTable__tag {
    font-size: 14px;
    font-weight: bold;
    padding: 0 16px;
}

.p-storeDetailTable__tagItem {
    display: inline-block;
    padding: 12px;
    margin: 0 12px 8px 0;
    background-color: #AFCFFF;
    border-radius: 4px;
}

.p-storeDetailDrinkTable {
    margin: 16px 0;
    width: 100%;
}

.p-storeDetailDrinkTable__caption {
    text-align: left;
    font-size: 18px;
    font-weight: bold;
    margin: 12px 0;
    border-left: 8px solid #FFEE58;
    padding-left: 12px;
}

.p-storeDetailDrinkTable__th {
    text-align: left;
    width: 35%;
}

.p-storeDetailDrinkTable__td {
    text-align: center;
    font-weight: bold;
}

.p-storeDetailDrinkTable__td--store {
    text-align: left;
    font-weight: bold;
    letter-spacing: .03em;
    line-height: 1.2em;
}

.p-storeDetailInfo__link {
    margin: 16px 0;
    display: flex;
    justify-content: space-around;
}

.p-storeDetailInfoBox {
    width: 350px;
}

.p-storeDetailInfo_linkItem {
    display: flex;
    font-size: 18px;
    font-weight: bold;
    padding: 16px 20px;
    border: 1px solid black;
    margin: 12px 0;
    border-radius: 50px;
    align-items: center;
    justify-content: space-around;
}

.p-storeDetailInfo__linkItem > img {
    margin-right: 12px;
}

.p-storeDetailInfo_credit {
    font-size: 9px;
}